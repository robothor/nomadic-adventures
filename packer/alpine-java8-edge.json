{
  "builders": [
    {
      "type": "docker",
      "image": "zeus.wjoel.com:5000/gliderlabs-alpine:edge",
      "commit": true,
      "run_command": [
        "-d", "-i", "--dns=8.8.8.8",
        "-t", "{{.Image}}", "/bin/sh"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apk-install openjdk8-jre-base"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "zeus.wjoel.com:5000/alpine-java8",
        "tag": "edge",
        "force": true
      },
      "docker-push"
    ]
  ]
}
